{
  "name": "usc-phil-club",
  "version": "0.1.0",
  "description": "Website for the USC Philosophy Club",
  "keywords": [
    "Append Editor",
    "Standard Notes",
    "Markdown",
    "KaTeX"
  ],
  "private": true,
  "author": "Theodore Chu",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/philclub/usc.git"
  },
  "bugs": {
    "url": "https://github.com/philclub/usc/issues"
  },
  "scripts": {
    "dev": "next -p 3001",
    "build": "next build",
    "export": "rm -rf out && next export",
    "format": "prettier --write .",
    "start": "next start",
    "typecheck": "tsc",
    "clean-deploy-cache": "rm -rf node_modules/.cache/gh-pages",
    "predeploy": "yarn run format && yarn run build && yarn run export && yarn clean-deploy-cache",
    "deploy": "gh-pages -b gh-pages -d out -t true",
    "server": "http-server ./out -p 3000 --cors"
  },
  "dependencies": {
    "classnames": "2.2.6",
    "date-fns": "2.17.0",
    "gray-matter": "4.0.2",
    "katex": "^0.12.0",
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "remark": "13.0.0",
    "remark-html": "13.0.1",
    "typescript": "^4.1.5"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "autoprefixer": "^10.2.4",
    "postcss": "^8.2.6",
    "tailwindcss": "^2.0.3",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "README.md": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  }
}
